{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "indent": "off",
    "react/jsx-uses-vars": 1,
    "react/no-deprecated": 1,
    "react/jsx-key": 1,
    "react/jsx-uses-react": 1,
    "no-unused-vars": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
